@using SistemaWEB.Ferretero.Models
@model TipoPoductoBEAN
@{
    ViewBag.Title = "RegistrarTipoProdss";
}

<h2>Registrar Tipo de Productos</h2>
@using (Html.BeginForm())
{

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.NombreTipoProd,"Nombre de Tipo", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.NombreTipoProd, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.IdClase, "Clase", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.IdClase, ViewBag.ListaClases as SelectList, "[--Select Item--]", new { @class = "form-control" })

        </div>
        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success " />
        </div>
    </div>
}
