@using SistemaWEB.Ferretero.Models
@model TipoPoductoBEAN
@{
    ViewBag.Title = "EditarTipoProd";
}

<h2>Editar Tipo de Productos</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>
            @Html.HiddenFor(model => model.IdTipoProd, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombreTipoProd,"Nombre del Tipo de Producto", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.NombreTipoProd, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.IdClase,"Clase", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.IdClase, ViewBag.ListaClases as SelectList, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Actualizar" class="btn btn-success" />
        </div>

    </div>
}
