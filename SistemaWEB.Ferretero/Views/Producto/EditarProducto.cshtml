@using SistemaWEB.Ferretero.Models
@model  ProductoBEAN
@{
    ViewBag.Title = "EditarProducto";
}

<h2>Editar Producto</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div>
        @Html.HiddenFor(model => model.IdProducto, htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombreProd, "Producto", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.NombreProd, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.PrecioProd, "Precio", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.PrecioProd, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Stock, "Stock", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.Stock, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.IdTipoProd, "Tipo", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.IdTipoProd, ViewBag.ListaTipoPrd as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Actualizar" class="btn btn-success" />
    </div>
</div>
}