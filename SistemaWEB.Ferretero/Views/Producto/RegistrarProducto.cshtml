@using SistemaWEB.Ferretero.Models
@model ProductoBEAN
@{
    ViewBag.Title = "RegistrarProducto";
}

<h2 style="color:crimson">Registrar Producto</h2>

@using (Html.BeginForm())
{

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.NombreProd, "Nombre del Producto", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.NombreProd, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.PrecioProd, "Precio", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.PrecioProd, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Stock, htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.Stock, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.IdTipoProd, "Tipo", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.IdTipoProd, ViewBag.ListaTipoPrd as SelectList, "[--Select Tipo--]", new { @class = "form-control" })

        </div>
        @*<div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success " />
        </div>*@
    </div>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
        Registrar
    </button>
    <!-- Modal -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Registro de Productos</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Desea guardar el registro ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}