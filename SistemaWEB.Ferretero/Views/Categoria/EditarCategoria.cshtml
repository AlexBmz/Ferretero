@using SistemaWEB.Ferretero.Models
@model  CategoriaBEAN
@{
    ViewBag.Title = "EditarCategoria";
}

<h2>Editar Categoria</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div>
            @Html.HiddenFor(model => model.IdCategoria, htmlAttributes: new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NombCat,"Nuevo Nombre", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.NombCat, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <input type="submit" value="Actualizar" class="btn btn-success" />
        </div>

    </div>
}

