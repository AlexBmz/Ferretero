
@using SistemaWEB.Ferretero.Models
@model CategoriaBEAN
@{
    ViewBag.Title = "RegistrarCategoria";
}

<h2>Registrar Categoria</h2>

@using (Html.BeginForm())
{

<div class="form-horizontal">
  
    <div class="form-group">
        @Html.LabelFor(model => model.NombCat,"Nombre de la Categoría", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.NombCat, htmlAttributes: new { @class = "form-control"})
    </div>
    <div class="form-group">
        <input type="submit" value="Registrar" class="btn btn-success " />
    </div>
</div>

}
