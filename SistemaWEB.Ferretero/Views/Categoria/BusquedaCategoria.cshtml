<table class="table table-bordered">
    <thead class="thead-dark">
        <tr>
            <th class="text-center">ID</th>
            <th>DESCRIPCION</th>
            <th>ACCIONES</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td class="text-center">@item.IdCategoria</td>
                <td>@item.NombCat</td>
                <td>
                    @Html.ActionLink("Editar", "EditarCategoria", new { id = item.IdCategoria }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.IdCategoria }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </tbody>
</table>