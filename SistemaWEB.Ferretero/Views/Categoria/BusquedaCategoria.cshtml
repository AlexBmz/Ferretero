@using SistemaWEB.Ferretero.Models
@model List<CategoriaBEAN>
@{
    ViewBag.Title = "BusquedaCategoria";
}

<h2 style="color:crimson" class="col col-lg-offset-4"> Busqueda  de  Categorias</h2>
<div class="col col-lg-offset-4">
    <br />
    <form action="/Categoria/BusquedaCategoria" method="post">
        <input type="text" id="id" name="id" placeholder="Ingrese código" class="form-control col-md-1" />
        <input type="submit" value="Buscar" class="btn btn-success" />
    </form>
</div>
@Html.ActionLink("Lista de Categorias", "ListarCat", "Categoria", new { }, new { @class = "btn btn-primary" })

