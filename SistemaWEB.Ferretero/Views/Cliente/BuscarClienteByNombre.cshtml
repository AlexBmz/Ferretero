@using SistemaWEB.Ferretero.Models
@model List<ClienteBEAN>
@{
    ViewBag.Title = "BuscarClienteByNombre";
}


<h2 style="color:crimson" class="col col-lg-offset-4"> Busqueda  de  Clientes</h2>
<div class="col col-lg-offset-4">
    <br />
    <form action="/Cliente/BuscarClienteByNombre" method="post">
        <input type="text" id="nomb" name="nomb" placeholder="Ingrese nombre" class="form-control col-md-1"/>
        <input type="submit" value="Buscar" class="btn btn-success" />
    </form>
</div>
@Html.ActionLink("Lista de Clientes", "ListaClientes", "Cliente", new { }, new { @class = "btn btn-primary" })
