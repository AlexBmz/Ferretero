@using SistemaWEB.Ferretero.Models
@model  ClaseBEAN
@{
    ViewBag.Title = "EditarClase";
}

<h2>Editar Clase</h2>
@using (Html.BeginForm())
{
<div class="form-horizontal">
    <div>
        @Html.HiddenFor(model => model.IdClase, htmlAttributes: new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NombClase,"Nuevo Nombre", htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(model => model.NombClase, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.IdCat,"Categoria", htmlAttributes: new { @class = "control-label" })
        @Html.DropDownListFor(model => model.IdCat, ViewBag.ListaClase as SelectList, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" value="Actualizar" class="btn btn-success" />
    </div>

</div>
}
