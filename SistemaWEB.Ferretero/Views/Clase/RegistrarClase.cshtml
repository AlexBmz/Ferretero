@using SistemaWEB.Ferretero.Models
@model ClaseBEAN

@{
    ViewBag.Title = "RegistrarClase";
}

<h2>Registrar Clase</h2>
@using (Html.BeginForm())
{

    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(model => model.NombClase,"Nombre de Clase", htmlAttributes: new { @class = "control-label" })
            @Html.TextBoxFor(model => model.NombClase, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">

            @Html.LabelFor(model => model.IdCat, "Categoria", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(model => model.IdCat, ViewBag.ListaClase as SelectList, "--Select Item--", new { @class = "form-control" })

        </div>
        <div class="form-group">
            <input type="submit" value="Registrar" class="btn btn-success " />
        </div>
    </div>

}
